# Secure Environment Configuration
# Generated by Ansible - No secrets in code

# Database Configuration
DATABASE_URL={{ database_url }}

# Redis Configuration
REDIS_URL={{ redis_url }}

# Django Configuration
SECRET_KEY={{ secret_key }}
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,{{ ansible_default_ipv4.address }}

# JWT Configuration
JWT_SECRET={{ jwt_secret }}

# Application Configuration
APP_NAME={{ app_name }}
APP_ENV=production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE={{ app_dir }}/logs/django.log

# Security Configuration
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://{{ ansible_default_ipv4.address }},https://localhost
CORS_ALLOW_CREDENTIALS=True

# Static Files Configuration
STATIC_ROOT={{ app_dir }}/staticfiles
MEDIA_ROOT={{ app_dir }}/media

# YOLO Model Configuration
YOLO_MODEL_PATH={{ app_dir }}/yolov8-gtsrb-trained.pt
