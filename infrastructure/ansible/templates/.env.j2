# Traffic Sign Detection System - Environment Variables

# Django Settings
SECRET_KEY={{ django_secret_key }}
DEBUG=False
ALLOWED_HOSTS={{ vm_public_ip }},{{ domain_name }},localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://{{ db_admin_username }}:{{ db_admin_password }}@{{ postgresql_server_fqdn }}:5432/{{ database_name }}?sslmode=require
DB_USER={{ db_admin_username }}
DB_PASSWORD={{ db_admin_password }}
DB_HOST={{ postgresql_server_fqdn }}
DB_PORT=5432

# Redis Configuration
REDIS_URL=rediss://:{{ redis_password }}@{{ redis_cache_hostname }}:6380/0

# Email Configuration
EMAIL_HOST_USER={{ email_host_user }}
EMAIL_HOST_PASSWORD={{ email_host_password }}
DEFAULT_FROM_EMAIL={{ default_from_email }}

# Azure Configuration
AZURE_STORAGE_ACCOUNT_NAME={{ storage_account_name }}
AZURE_STORAGE_ACCOUNT_KEY={{ storage_account_key }}
AZURE_CONTAINER_NAME=media

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING={{ application_insights_connection_string }}

# CORS Settings
CORS_ALLOWED_ORIGINS=http://{{ vm_public_ip }},https://{{ domain_name }},http://localhost:3000,http://127.0.0.1:3000

# Model Configuration
MODEL_PATH=/opt/traffic-sign-detector/yolov8-gtsrb-trained.pt
