# Secure Environment Variables Template
# Copy this file to .env.secure and fill in your values
# NEVER commit .env.secure to version control

# Database Configuration
TF_VAR_db_admin_password="your-secure-db-password-here"
TF_VAR_database_name="traffic_sign_detector"

# Django Configuration
TF_VAR_django_secret_key="your-django-secret-key-here"
TF_VAR_jwt_secret="your-jwt-secret-here"

# Redis Configuration
TF_VAR_redis_password="your-redis-password-here"

# Azure Configuration
AZURE_CLIENT_ID="your-azure-client-id"
AZURE_CLIENT_SECRET="your-azure-client-secret"
AZURE_TENANT_ID="your-azure-tenant-id"
AZURE_SUBSCRIPTION_ID="your-azure-subscription-id"

# Container Registry
ACR_LOGIN_SERVER="your-registry.azurecr.io"
ACR_USERNAME="your-registry-username"
ACR_PASSWORD="your-registry-password"

# API Keys (if any)
TF_VAR_api_keys='{"openai_api_key": "your-openai-key", "google_api_key": "your-google-key"}'

# Allowed IP addresses for Key Vault access
TF_VAR_allowed_ip_addresses='["1.2.3.4/32", "5.6.7.8/32"]'

# Optional: Custom domain
TF_VAR_domain_name="your-domain.com"
TF_VAR_dns_zone_id="/subscriptions/.../resourceGroups/.../providers/Microsoft.Network/dnsZones/your-domain.com"
